public class Main
{
	public static void main(String[] args) {
		int[] a = {1,20,10,45,3};
		int firstmax = a[0];
		for(int i=1;i<=a.length-1;i++){
		    if(a[i] >firstmax){
		        firstmax = a[i];
		       
		    }
		 
		}
		System.out.println(firstmax);
		
		int secondmax = a[0];
		for(int i =1;i<=a.length-1;i++){
		    if(a[i] == firstmax){
		    continue;
		    }
		    if(a[i] >secondmax && secondmax < firstmax){
		        secondmax=a[i];
		    } 	       
	 }
	 System.out.println(secondmax);		
	}	
}
